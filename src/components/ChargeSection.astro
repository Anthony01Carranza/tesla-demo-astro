---
import Footer from "./footer.astro";
---

<section
    class="landing-section bg-black h-screen w-screen text-center relative overflow-hidden"
    data-header-color='black'
    id="modelY"
    >
    <div class="z-30 relative h-full flex flex-col ">
        <header>
            <h2 class="text-black pt-40 md:pt-20 text-[40px] font-medium ">Model Y</h2>
            <p class="text-black text-sm underline">Schedule a Test drive</p>
        </header>

        <footer class="flex flex-col flex-grow justify-end pb-20">
            <div class=" gap-x-4 flex mx-auto">
                <a
                    class="bg-gray-600 text-sm rounded font-medium text-white px-12 py-2 inline-block hover:bg-gray-500 hover:text-white transition-colors"
                    >Explore Inventory</a
                >
                <a
                    class="bg-white text-sm rounded font-medium text-black px-12 py-2  hover:bg-black hover:text-white transition-colors inline-flex justify-center items-center "
                    >Custom Order</a
                >
            </div>
        </footer>
    </div>
    <div class="absolute top-0 bottom-0 h-full w-full z-10">
        <img
        src="/model-y.avif"
        alt="Model Y"
        class="h-full min-[900px]:block max-[440px]:hidden w-full object-cover object-center"
        />
        <img
        src="/ModelY-Mobile.avif"
        alt="Model Y"
        class="h-full w-full min-[441px]:hidden max-[440px]:block object-cover object-center"
        />
    </div>
</section>
